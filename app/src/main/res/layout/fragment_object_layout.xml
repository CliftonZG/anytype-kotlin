<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sheet_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:src="@drawable/sheet_top" />

    <TextView
        android:id="@+id/tvRelationHeader"
        style="@style/DefaultCellRelationHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Layout" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rect_tab_layouts"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/basic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_layouts_start_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_layout_basic"
                android:drawablePadding="1dp"
                android:text="Basic" />
        </FrameLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D4D2C5" />

        <FrameLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_layouts_middle_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_layout_profile"
                android:drawablePadding="1dp"
                android:text="Profile" />
        </FrameLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D4D2C5" />

        <FrameLayout
            android:id="@+id/todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_layouts_end_selector"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_layout_todo"
                android:drawablePadding="1dp"
                android:text="Todo" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>