<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/blockMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:contentDescription="@string/editor_toolbar"
            app:srcCompat="@drawable/ic_edit" />


    <FrameLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/blockMenuButton"
            android:id="@+id/arrowContainer"
            android:layout_width="32dp"
            android:layout_height="32dp">

        <ImageView
                android:layout_gravity="center"
                android:id="@+id/toggleArrow"
                android:src="@drawable/ic_toggle_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

    </FrameLayout>

    <com.agileburo.anytype.feature_editor.ui.ClearFocusEditText
            android:fontFamily="monospace"
            android:id="@+id/textEditable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_toEndOf="@id/arrowContainer"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

</RelativeLayout>