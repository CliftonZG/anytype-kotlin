<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="@string/content_description_document_cover"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/documentIconContainer"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_profile_icon"
            android:transitionName="@string/logo_transition">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/imageText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/graphik_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="44sp"
                tools:text="S" />

        </FrameLayout>

    </FrameLayout>

    <com.anytypeio.anytype.core_ui.widgets.text.TextInputWidget
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:background="@null"
        android:fontFamily="@font/graphik_semibold"
        android:hint="@string/hint_profile_title"
        android:textColor="@color/black"
        android:textColorHint="#ACA996"
        android:textSize="34sp"
        tools:text="Title" />

</LinearLayout>